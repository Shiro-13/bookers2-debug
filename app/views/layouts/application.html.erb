<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/fc6aa7a24c.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <p id="notice"><%= notice %></p>
      <% if user_signed_in? %>
      <div class="search-form">
        <%= form_with(url:search_path, method: :get, local: true) do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, [['User', 'user'], ['Book', 'book']] %>
          <%= f.select :search, [["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]] %>
          <%= f.submit "検索", name: nil %>
        <% end %>
      </div>
    <% end %>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>